generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TeamUser {
  SUPER
  ADMIN
  EMPLOYEE
}

model Team {
  id         String   @id
  name       String
  email      String   @unique
  password   String
  phone      String
  type       TeamUser
  gstin      String   @unique
  business   String
  address    Json
  status     Boolean  @default(false)
  created_at DateTime @default(now())
  updated_at DateTime @default(now())

  superId String?
  super   Team?   @relation("BusinessRelation", fields: [superId], references: [id])

  teams Team[] @relation("BusinessRelation")
}
